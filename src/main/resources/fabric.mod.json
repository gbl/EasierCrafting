{
    "schemaVersion": 1,
    "id": "easiercrafting",
    "version": "${version}",
    "environment": "client",
    "entrypoints": {
        "client": [ "de.guntram.mcmod.easiercrafting.EasierCrafting" ],
        "modmenu": [ "de.guntram.mcmod.easiercrafting.MMConfigurationHandler" ]
    },
    "custom": {
        "modupdater": {
            "strategy": "json",
            "url": "https://raw.githubusercontent.com/gbl/ModVersionInfo/master/EasierCrafting.json"
        }
    },
    "mixins": [
      	"mixins.easiercrafting.json",
        "mixins.easiercrafting_debug.json"
    ],
    "depends": {
      "fabric": "*"
    },
    "recommends": {
      "modmenu" : "*",
      "modupdater": ">=1.1.7"        
    },
    "name": "EasierCrafting",
    "description": "One-click Crafting",
    "icon": "icon.png",
    "authors": [ "Giselbaer" ],
    "contact": {
        "homepage": "https://www.curseforge.com/minecraft/mc-mods/easiercrafting",
        "sources": "https://github.com/gbl/EasierCrafting",
        "issues": "https://github.com/gbl/EasierCrafting/issues"
    }
}
